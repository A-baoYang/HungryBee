<p id="notice"><%= notice %></p>

<%= render '/shared/title', title: "Forum" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Issue</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.issue %></td>
        <td><%= forum.description %></td>

        <td><%= link_to 'Show', forum_path(forum), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
<%= link_to 'New Post', new_forum_path, class: 'btn btn-warning' %>
<% end %>

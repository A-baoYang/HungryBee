<%= render '/shared/title', title: 'Ask Anything!' %>

<div class="well col-md-6">
  <%= form_for @forum do |f| %>
  <div class="form-group">
    <%= label_tag :issue %>
    <br>
    <%= f.text_field :issue %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>
<%= render '/shared/title', title: '使用者註冊'%>

<div class="well col-md-6">
  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= label_tag :name %>
    <br>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <br>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <br>
  <%= f.submit(@user.new_record? ? '註冊' : 'Update Profile', class: 'btn btn-success') %>
  <% end %>
</div>
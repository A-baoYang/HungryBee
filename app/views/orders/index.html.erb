<p id="notice"><%= notice %></p>

<%= render '/shared/title', title: "Featured Courses" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Classify</th>
      <th>Description</th>
      <th colspan="3">Likes</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><h4><strong><%= order.name %></h4><strong></td>
        <td><%= order.phone %></td>
        <td><%= order.description %></td>
        <td><%= order.total_votes %></td>
        <td>
          <%= link_to vote_order_path(order, vote: true), class: "btn btn-primary", method: 'post' do %>
          <h4>üëç</h4>
          <% end %>
        </td>
        <td>
          <%= link_to vote_order_path(order, vote: false), class: "btn btn-danger", method: 'post' do %>
          <h4>üî´</h4>
          <% end %>
        </td>
        <td><%= link_to 'Apply', order, class: 'btn btn-info' %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-success' %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: 'btn btn-warning' %>

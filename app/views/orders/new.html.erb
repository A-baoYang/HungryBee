<h1>New Order</h1>

<%= form_for @order do |f| %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control col-sm-3', value: current_user.name %>
    </div>

    <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: 'form-control col-sm-3' %>
    </div>

    

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control col-sm-3', placeholder: 'I want order...' %>
    </div>

    <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
    </div>

    

<% end %>